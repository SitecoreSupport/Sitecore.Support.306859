    <events timingLevel="custom">
      <event name="publish:end">
        <handler type="Sitecore.Support.Publishing.AccessResultCacheClearer, Sitecore.Support.306859" method="ClearCache" 
                 patch:before="handler[@type='Sitecore.Publishing.HtmlCacheClearer, Sitecore.Kernel']"/>
      </event>
    </events>
  </sitecore>
</configuration>